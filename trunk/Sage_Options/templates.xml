<Ui xmlns="http://www.blizzard.com/wow/ui/">

	<!-- Options Panel Templates -->
	<Frame name="SageOptionsPanel" hidden="true" virtual="true">
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset x="4" y="-32"/>
			</Anchor>
			<Anchor point="BOTTOMRIGHT">
				<Offset x="-4" y="4"/>
			</Anchor>
		</Anchors>
	</Frame>

	<Slider name="SageOptionsSlider" inherits="GooeySlider" virtual="true">
		<Size x="238" y="18"/>
	</Slider>

	<!-- scale -->
	<Slider name="SageOptionsScaleSlider" inherits="SageOptionsSlider" minValue="50" maxValue="150" valuestep="1" virtual="true">
		<Scripts>
			<OnLoad>
				getglobal(this:GetName() .. "Text"):SetText(SAGE_OPTIONS_SCALE)
				getglobal(this:GetName() .. "Low"):SetText("50%")
				getglobal(this:GetName() .. "High"):SetText("150%")
			</OnLoad>
			<OnValueChanged>
				if not this:GetParent().onShow then
					Sage.ForFrame(this:GetParent().unit, SageFrame.SetFrameScale, this:GetValue() / 100)
				end
				getglobal(this:GetName() .. "ValText"):SetText(this:GetValue())
			</OnValueChanged>
		</Scripts>
	</Slider>

	<!-- opacity -->
	<Slider name="SageOptionsOpacitySlider" inherits="SageOptionsSlider" minValue="0" maxValue="100" valuestep="1" virtual="true">
		<Scripts>
			<OnLoad>
				getglobal(this:GetName() .. "Text"):SetText(SAGE_OPTIONS_OPACITY)
				getglobal(this:GetName() .. "Low"):SetText("0%")
				getglobal(this:GetName() .. "High"):SetText("100%")
			</OnLoad>
			<OnValueChanged>
				if not this:GetParent().onShow then
					Sage.ForFrame(this:GetParent().unit, SageFrame.SetFrameOpacity, this:GetValue() / 100)
				end
				getglobal(this:GetName() .. "ValText"):SetText(this:GetValue())
			</OnValueChanged>
		</Scripts>
	</Slider>

	<!-- width -->
	<Slider name="SageOptionsWidthSlider" inherits="SageOptionsSlider" minValue="0" maxValue="300" valuestep="5" virtual="true">
		<Scripts>
			<OnLoad>
				getglobal(this:GetName() .. "Text"):SetText(SAGE_OPTIONS_WIDTH)
				getglobal(this:GetName() .. "Low"):SetText(0)
				getglobal(this:GetName() .. "High"):SetText(300)
			</OnLoad>
			<OnValueChanged>
				if not this:GetParent().onShow then
					Sage.ForFrame(this:GetParent().unit, SageFrame.SetFrameWidth, this:GetValue())
				end
				getglobal(this:GetName() .. "ValText"):SetText(this:GetValue())
			</OnValueChanged>
		</Scripts>
	</Slider>
</Ui>