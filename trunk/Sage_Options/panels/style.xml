<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<Script file="style.lua"/>

	<!-- Search Box -->
	<Frame name="SageOptionsTextureBox" virtual="true">
		<Frames>
			<Button name="$parentSetTexture" inherits="GooeyButton" text="SAGE_OPTIONS_SET_TEXTURE">
				<Size x="42" y="24"/>

				<Anchors>
					<Anchor point="TOPRIGHT"/>
				</Anchors>

				<Scripts>
					<OnClick>
						Sage.SetBarTexture(getglobal(this:GetParent():GetName() .. "Box"):GetText())
					</OnClick>
				</Scripts>
			</Button>

			<!-- the editbox -->
			<EditBox name="$parentBox" inherits="GooeyEditBox" letters="255">
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parentSetTexture" relativePoint="BOTTOMLEFT"/>
				</Anchors>
			</EditBox>
		</Frames>
	</Frame>

	<Frame name="SageOptionsStyle" inherits="SageOptionsPanel" virtual="true">
		<Frames>
			<CheckButton name="$parentShowText" inherits="GooeyCheckButton" text="SAGE_OPTIONS_SHOW_STATUSBAR_TEXT">
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>

				<Scripts>
					<OnClick>
						Sage.ShowText(this:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentPercents" inherits="GooeyCheckButton" text="SAGE_OPTIONS_SHOW_PERCENTS">
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentShowText" relativePoint="BOTTOM"/>
				</Anchors>

				<Scripts>
					<OnClick>
						Sage.ShowPercents(this:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentOutlineNames" inherits="GooeyCheckButton" text="SAGE_OPTIONS_OUTLINE_NAMES">
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentPercents" relativePoint="BOTTOM"/>
				</Anchors>

				<Scripts>
					<OnClick>
						SFont.OutlineOutside(this:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentOutlineBarText" inherits="GooeyCheckButton" text="SAGE_OPTIONS_OUTLINE_BARS">
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentOutlineNames" relativePoint="BOTTOM"/>
				</Anchors>

				<Scripts>
					<OnClick>
						SFont.OutlineBar(this:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentColorOnDebuff" inherits="GooeyCheckButton" text="SAGE_OPTIONS_DEBUFF_COLORING">
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentOutlineBarText" relativePoint="BOTTOM"/>
				</Anchors>

				<Scripts>
					<OnClick>
						Sage.ColorHealthOnDebuff(this:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<Frame name="$parentHealth" inherits="GooeyDropDown">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentColorOnDebuff" relativePoint="BOTTOMLEFT">
						<Offset x="-14" y="-2"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						SOptionsStyleHealth_OnShow()
					</OnShow>
				</Scripts>
			</Frame>

			<Frame name="$parentMana" inherits="GooeyDropDown">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentHealth" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="-2"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						SOptionsStyleMana_OnShow()
					</OnShow>
				</Scripts>
			</Frame>

			<Frame name="$parentTexture" inherits="GooeyDropDown">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentMana" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="-2"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						SOptionsStyleTexture_OnShow()
					</OnShow>
				</Scripts>
			</Frame>

			<Frame name="$parentCustomTexture" inherits="SageOptionsTextureBox" hidden="true">
				<Size x="240" y="24"/>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTexture" relativePoint="BOTTOMLEFT">
						<Offset x="16" y="2"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						SOptionsStyleCustomTexture_OnShow()
					</OnShow>
				</Scripts>
			</Frame>
		</Frames>

		<Scripts>
			<OnLoad>
				SOptionsStyle_OnLoad()
			</OnLoad>
			<OnShow>
				SOptionsStyle_OnShow()
			</OnShow>
			<OnHide>
				SOptionsStyle_OnHide()
			</OnHide>
		</Scripts>
	</Frame>
</Ui>