<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<Script file="profiles.lua"/>

	<Button name="SageOptionsProfileButton" virtual="true">
		<Scripts>
			<OnClick>
				SOptionsProfileButton_OnClick(this);
			</OnClick>
			<OnMouseWheel>
				SOptionsProfilesButton_OnMousewheel(SageOptionsPanelProfilesScrollFrame, arg1);
			</OnMouseWheel>
		</Scripts>

		<ButtonText setAllPoints="true"/>
		<NormalFont font="GameFontNormal" justifyH="LEFT"/>
		<HighlightTexture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD"/>
	</Button>

	<!-- Profiles Panel -->
	<Frame name="SageOptionsProfiles" inherits="SageOptionsPanel" virtual="true">
		<Frames>
			<ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
						<Offset x="-4" y="-2"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
						<Offset x="-26" y="42"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnVerticalScroll>
						FauxScrollFrame_OnVerticalScroll(10, SOptionsProfilesScrollBar_Update)
					</OnVerticalScroll>
				</Scripts>
			</ScrollFrame>

			<Button name="$parentLoad" inherits="GooeyButton" text="SAGE_OPTIONS_PROFILE_LOAD">
				<Size x="42" y="24"/>

				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="4" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						SOptionsProfiles_LoadProfile();
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parentSave" inherits="GooeyButton" text="SAGE_OPTIONS_PROFILE_SAVE">
				<Size x="44" y="24"/>

				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentLoad" relativePoint="RIGHT">
						<Offset x="2" y="0"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						SOptionsProfiles_SaveProfile();
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parentDelete" inherits="GooeyButton" text="SAGE_OPTIONS_PROFILE_DELETE">
				<Size x="52" y="24"/>

				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentSave" relativePoint="RIGHT">
						<Offset x="2" y="0"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						SOptionsProfiles_DeleteProfile();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				SOptionsProfiles_OnLoad();
			</OnLoad>
			<OnShow>
				SOptionsProfiles_OnShow();
			</OnShow>
		</Scripts>
	</Frame>
</Ui>