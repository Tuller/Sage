<Ui xmlns="http://www.blizzard.com/wow/ui/">

	<Include file="panels\general.xml"/>
	<Include file="panels\style.xml"/>
	<Include file="panels\profiles.xml"/>

	<Script file="menu.lua"/>

	<CheckButton name="SageOptionsTabButton" virtual="true">
		<Size x="64" y="26"/>

		<ButtonText setAllPoints="true" nonspacewrap="false"/>
		<NormalFont font="GameFontNormalSmall" justifyH="RIGHT"/>
		<HighlightFont font="GameFontHighlightSmall" justifyH="RIGHT"/>
	</CheckButton>

	<Frame name="SageOptionsTabbedMenu" virtual="true">
		<Size x="70" y="0"/>

		<Frames>
			<CheckButton name="$parentGeneral" inherits="SageOptionsTabButton" text="SAGE_PANEL_GENERAL">
				<Scripts>
					<OnClick>
						SOptions_SwitchTab("General");
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentStyle" inherits="SageOptionsTabButton" text="SAGE_PANEL_STYLE">
				<Scripts>
					<OnClick>
						SOptions_SwitchTab("Style");
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentProfiles" inherits="SageOptionsTabButton" text="SAGE_PANEL_PROFILES">
				<Scripts>
					<OnClick>
						SOptions_SwitchTab("Profiles");
					</OnClick>
				</Scripts>
			</CheckButton>
		</Frames>
	</Frame>

	<Frame name="SageOptions" clampedToScreen="true" movable="true" toplevel="true" frameStrata="DIALOG" parent="UIParent">
		<Size x="320" y="350"/>

		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset x="0" y="-200"/>
			</Anchor>
		</Anchors>

		<Frames>
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset x="-2" y="-2"/>
					</Anchor>
				</Anchors>
			</Button>

			<Frame name="$parentMenu" inherits="SageOptionsTabbedMenu, GooeyFrame">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="0" y="-24"/>
					</Anchor>
				</Anchors>
			</Frame>

			<Frame name="$parentPanel" inherits="GooeyFrame" text="SAGE_OPTIONS">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentMenu" relativePoint="TOPRIGHT">
						<Offset x="-6" y="24"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>

				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentTitle" font="GameFontHighlightLarge" text="SAGE_OPTIONS">
							<Anchors>
								<Anchor point="TOP">
									<Offset x="0" y="-10"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

				<Frames>
					<Frame name="$parentGeneral" inherits="SageOptionsGeneral"/>
					<Frame name="$parentStyle" inherits="SageOptionsStyle"/>
					<Frame name="$parentProfiles" inherits="SageOptionsProfiles"/>
				</Frames>
			</Frame>
		</Frames>

		<Scripts>
			<OnShow>
				SOptions_OnShow();
			</OnShow>
			<OnMouseDown>
				this:StartMoving();
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing();
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>