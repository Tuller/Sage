<Ui xmlns="http://www.blizzard.com/wow/ui/">

	<Script file="visibility.lua"/>

	<CheckButton name="BOptionsShowButton" inherits="GooeyCheckButton" virtual="true">
		<Scripts>
			<OnClick>
				if self:GetChecked() then
					BBar:Get(self:GetText()):ShowFrame()
				else
					BBar:Get(self:GetText()):HideFrame()
				end
			</OnClick>
			<OnMouseWheel>
				BOptionsVisibility_OnMousewheel(getglobal(this:GetParent():GetName() .. "ScrollFrame"), arg1)
			</OnMouseWheel>
		</Scripts>
	</CheckButton>

	<!-- Panel for hiding/showing bars -->
	<Frame name="BongosOptionsVisibility" inherits="BongosOptionsPanel" virtual="true">
		<Frames>
			<ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset x="-48" y="-30"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-24" y="2"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnVerticalScroll>
						FauxScrollFrame_OnVerticalScroll(3, BOptionsVisibilityScrollBar_Update)
					</OnVerticalScroll>
				</Scripts>
			</ScrollFrame>
		</Frames>
		<Scripts>
			<OnLoad>
				BOptionsVisibility_OnLoad(self)
			</OnLoad>
			<OnShow>
				BOptionsVisibility_OnShow(self)
			</OnShow>
			<OnMouseWheel>
				BOptionsVisibility_OnMousewheel(getglobal(self:GetName() .. "ScrollFrame"), arg1)
			</OnMouseWheel>
		</Scripts>
	</Frame>
</Ui>