<Ui xmlns="http://www.blizzard.com/wow/ui/">
	
	<Script file="binder.lua"/>
	
	<!-- Trinity has a nifty way of implementing keybindings, I'm using it for Bongos -->
	<Frame name="BongosOptionsBindings" inherits="BongosOptionsPanel" frameStrata="DIALOG" virtual="true">
		<Layers>
			<Layer level="ARTWORK">		
				<FontString name="$parentDesc" inherits="GameFontHighlight" justifyH="LEFT" justifyV="TOP" text="BONGOS_BINDINGS_HELP">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="4" y="-42"/>
						</Anchor>
						<Anchor point="BOTTOMRIGHT">
							<Offset x="-4" y="6"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<CheckButton name="$parentPerCharacter" inherits="GooeyCheckButton" text="CHARACTER_SPECIFIC_KEYBINDINGS">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="4" y="-4"/>
					</Anchor>
				</Anchors>
						
				<Scripts>
					<OnShow>
						BOptionsBinderPerCharacter_OnShow(self)
					</OnShow>
					<OnHide>
						BOptionsBinderPerCharacter_OnHide(self)
					</OnHide>
					<OnClick>
						BOptionsBinderPerCharacter_OnClick(self)
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
						GameTooltip:SetText(CHARACTER_SPECIFIC_KEYBINDING_TOOLTIP, nil, nil, nil, nil, 1)
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
				</Scripts>
			</CheckButton>
		</Frames>

		<Scripts>
			<OnShow>
				KeyBound:Toggle()
			</OnShow>
			<OnHide>
				KeyBound:Toggle()
			</OnHide>
		</Scripts>
	</Frame>
</Ui>