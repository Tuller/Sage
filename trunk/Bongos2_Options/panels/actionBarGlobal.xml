<Ui xmlns="http://www.blizzard.com/wow/ui/">

	<Script file="actionBarGlobal.lua"/>

	<!-- Global Actionbar Settings Panel -->
	<Frame name="BongosOptionsActionBar" inherits="BongosOptionsPanel" virtual="true">
		<Frames>
			<CheckButton name="$parentLockButtons" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_ACTIONBAR_LOCK_BUTTONS">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="4" y="6"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						self:SetChecked(BongosActionConfig:ButtonsLocked())
					</OnShow>
					<OnClick>
						BongosActionConfig:LockButtons(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentRightClickSelfCast" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_ACTIONBAR_RIGHTCLICK_SELFCAST">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentLockButtons" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="4"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						self:SetChecked(BongosActionConfig:GetRightClickUnit())
					</OnShow>
					<OnClick>
						if self:GetChecked() then
							BongosActionConfig:SetRightClickUnit("player")
						else
							BongosActionConfig:SetRightClickUnit(nil)
						end
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentRange" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_ACTIONBAR_RANGE_COLORING">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentRightClickSelfCast" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="4"/>
					</Anchor>
				</Anchors>

				<Frames>
					<Button name="$parentColor" inherits="GooeyColorPicker">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parentText" relativePoint="RIGHT">
								<Offset x="6" y="0"/>
							</Anchor>
						</Anchors>

						<Scripts>
							<OnShow>
								local r, g, b = BongosActionConfig:GetRangeColor()
								getglobal(self:GetName() .. "NormalTexture"):SetVertexColor(r, g, b)
							</OnShow>
							<OnClick>
								BOptionsRangeColor_OnClick(self)
							</OnClick>
						</Scripts>
					</Button>
				</Frames>

				<Scripts>
					<OnShow>
						self:SetChecked(BongosActionConfig:RangeColoring())
					</OnShow>
					<OnClick>
						BongosActionConfig:SetRangeColoring(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentShowGrid" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_ACTIONBAR_SHOW_EMPTY">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentRange" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnShow>
						self:SetChecked(BongosActionConfig:ShowingEmptyButtons())
					</OnShow>
					<OnClick>
						BongosActionConfig:ShowEmptyButtons(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentTooltips" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_ACTIONBAR_SHOW_TOOLTIPS">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentShowGrid" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnShow>
						self:SetChecked(BongosActionConfig:ShowingTooltips())
					</OnShow>
					<OnClick>
						BongosActionConfig:ShowTooltips(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentMacroText" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_ACTIONBAR_SHOW_MACROS">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTooltips" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnShow>
						self:SetChecked(BongosActionConfig:ShowingMacros())
					</OnShow>
					<OnClick>
						BongosActionConfig:ShowMacros(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentHotkeysText" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_ACTIONBAR_SHOW_HOTKEYS">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentMacroText" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnShow>
						self:SetChecked(BongosActionConfig:ShowingHotkeys())
					</OnShow>
					<OnClick>
						BongosActionConfig:ShowHotkeys(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<Frame name="$parentQuickMove" inherits="GooeyDropDown">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentHotkeysText" relativePoint="BOTTOMLEFT">
						<Offset x="-16" y="-4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnLoad>
						getglobal(self:GetName() .. "Label"):SetText(BONGOS_OPTIONS_ACTIONBAR_QUICK_MOVE)
					</OnLoad>
					<OnShow>
						UIDropDownMenu_Initialize(self, BOptionsQuickMove_Initialize)
						UIDropDownMenu_SetWidth(72, self)
						UIDropDownMenu_SetSelectedValue(self, BongosActionConfig:GetQuickMoveMode())
					</OnShow>
				</Scripts>
			</Frame>

			<Slider name="$parentNumActionBars" inherits="BongosOptionsSlider" minValue = "1" maxValue="16" valuestep="1">
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="0" y="20"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnLoad>
						BOptionsNumActionbars_OnLoad(self)
					</OnLoad>
					<OnShow>
						BOptionsNumActionbars_OnShow(self)
					</OnShow>
					<OnValueChanged>
						BOptionsNumActionbars_OnValueChanged(self, value)
					</OnValueChanged>
				</Scripts>
			</Slider>
		</Frames>
		<Scripts>
			<OnLoad>
				BOptionsActionBarGlobal_OnLoad(self)
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>