<Ui xmlns="http://www.blizzard.com/wow/ui/">

	<!-- General options panel -->
	<Frame name="BongosOptionsGeneral" inherits="BongosOptionsPanel" virtual="true">
		<Frames>
			<CheckButton name="$parentLock" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_GENERAL_LOCK">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="4" y="4"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						self:SetChecked(Bongos:IsLocked())
					</OnShow>
					<OnClick>
						Bongos:SetLock(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentStickyBars" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_GENERAL_STICKY">
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentLock" relativePoint="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnShow>
						self:SetChecked(Bongos:IsSticky())
					</OnShow>
					<OnClick>
						Bongos:SetSticky(self:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton>
			
<!-- 			<CheckButton name="$parentShowMinimap" inherits="GooeyCheckButton" text="BONGOS_OPTIONS_GENERAL_SHOW_MINIMAP">
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentStickyBars" relativePoint="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnClick>
						Bongos.SetMinimapVis(this:GetChecked())
					</OnClick>
				</Scripts>
			</CheckButton> -->

			<Slider name="$parentAlpha" inherits="BongosOptionsOpacitySlider">
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="6" y="20"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnShow>
						self.onShow = true
						self:SetValue(100)
						self.onShow = nil
					</OnShow>
					<OnValueChanged>
						if not self.onShow then
							BBar:ForAll("SetFrameAlpha", value/100)
						end
						getglobal(self:GetName() .. "ValText"):SetText(value)
					</OnValueChanged>
				</Scripts>
			</Slider>

			<Slider name="$parentScale" inherits="BongosOptionsScaleSlider">
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="$parentAlpha">
						<Offset x="0" y="40"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						self.onShow = true
						self:SetValue(100)
						self.onShow = nil
					</OnShow>
					<OnValueChanged>
						if not self.onShow then
							BBar:ForAll("SetFrameScale", value/100)
						end
						getglobal(self:GetName() .. "ValText"):SetText(value)
					</OnValueChanged>
				</Scripts>
			</Slider>
		</Frames>
	</Frame>
</Ui>