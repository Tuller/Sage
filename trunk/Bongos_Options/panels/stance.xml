<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<Script file="stance.lua"/>
	
	
	<EditBox name="BongosOptionsNumBox" inherits="GooeyEditBox" autoFocus="false" letters="3" numeric="true" virtual="true">
		<Size x="42" y="24"/>
		
		<Scripts>
			<OnLoad>
				this:SetTextInsets(8, 8, 0, 1)
			</OnLoad>
		</Scripts>		
		<FontString font="GameFontHighlight"/>
	</EditBox>

	<Frame name="BongosOptionsRange" inherits="GooeyComponent" virtual="true">
		<Size x="94" y="28"/>

		<Frames>
			<EditBox name="$parentMin" autoFocus="false" letters="3" numeric="true">
				<Size x="48" y="28"/>

				<Anchors>
					<Anchor point="LEFT">
						<Offset x="2" y="0"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnLoad>
						this:SetTextInsets(8, 8, 0, 1)
					</OnLoad>
					<OnEscapePressed>
						this:ClearFocus()
					</OnEscapePressed>
				</Scripts>			
				<FontString font="GameFontHighlight"/>
			</EditBox>

			<EditBox name="$parentMax" autoFocus="false" letters="3" numeric="true">
				<Size x="62" y="28"/>

				<Anchors>
					<Anchor point="RIGHT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>

				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentText" font="GameFontHighlightSmall" text="BONGOS_TO_BAR">
							<Anchors>
								<Anchor point="LEFT">
									<Offset x="6" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				
				<Scripts>
					<OnLoad>
						this:SetTextInsets(24, 8, 0, 1)
					</OnLoad>
					<OnEscapePressed>
						this:ClearFocus()
					</OnEscapePressed>
				</Scripts>				
				<FontString font="GameFontHighlight"/>
			</EditBox>
		</Frames>
	</Frame>

	<Button name="BongosOptionsStanceButton" virtual="true">
		<Scripts>
			<OnClick>
				BOptionsStanceButton_OnClick(this)
			</OnClick>
			<OnMouseWheel>
				BOptionsStance_OnMousewheel(getglobal(this:GetParent():GetName() .. 'ScrollFrame'), arg1)
			</OnMouseWheel>
			<OnEnter>
				if (this:GetTextWidth()) > this:GetWidth() then
					GameTooltip:SetOwner(this, "ANCHOR_LEFT")
					GameTooltip:SetText(this:GetText())
					GameTooltip:Show()
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide()
			</OnLeave>
		</Scripts>

		<ButtonText setAllPoints="true"/>
		<NormalFont font="GameFontNormal" justifyH="LEFT"/>
		<HighlightFont font="GameFontHighlight" justifyH="LEFT"/>
		<HighlightTexture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD"/>
	</Button>

	<!-- edit dialog -->
	<Frame name="BongosOptionsStanceDialog" inherits="GooeyComponent" setAllPoints="true" enableMouse="true" movable="true" topLevel="true" frameStrata="DIALOG" hidden="true" virtual="true">
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentBarTitle" font="GameFontNormal" text="BONGOS_STANCE_STANCE">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="12" y="-12"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentStanceTitle" font="GameFontNormal" text="BONGOS_STANCE_BARS">
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeTo="$parentBarTitle">
							<Offset x="0" y="-64"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Frame name="$parentStance" inherits="GooeyDropDown">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentBarTitle" relativePoint="BOTTOMLEFT">
						<Offset x="-16" y="-6"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnShow>
						BOptionsStanceStance_OnShow()
					</OnShow>
				</Scripts>
			</Frame>
	
			<Frame name="$parentBars" inherits="BongosOptionsRange">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentStanceTitle" relativePoint="BOTTOMLEFT">
						<Offset x="-2" y="-6"/>
					</Anchor>
				</Anchors>
			</Frame>

			<Button name="$parentAccept" inherits="UIPanelButtonTemplate" text="ACCEPT">
				<Size x="44" y="24"/>

				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-4" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						BOptionsStance_Save()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parentCancel" inherits="UIPanelButtonTemplate" text="CANCEL">
				<Size x="52" y="24"/>

				<Anchors>
					<Anchor point="RIGHT" relativeTo="$parentAccept" relativePoint="LEFT">
						<Offset x="-6" y="0"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						this:GetParent():Hide()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
	</Frame>

	<!-- Panel for hiding/showing bars -->
	<Frame name="BongosOptionsStance" inherits="BongosOptionsPanel" virtual="true">
		<Frames>
			<ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
						<Offset x="-48" y="-4"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-24" y="42"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnVerticalScroll>
						FauxScrollFrame_OnVerticalScroll(3, BOptionsStance_UpdateScrollBar)
					</OnVerticalScroll>
				</Scripts>
			</ScrollFrame>

			<Button name="$parentNew" inherits="UIPanelButtonTemplate" text="BONGOS_OPTIONS_ADD">
				<Size x="44" y="24"/>

				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="4" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						getglobal(this:GetParent():GetName() .. "StanceAdd"):Show()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parentDelete" inherits="UIPanelButtonTemplate" text="BONGOS_OPTIONS_DELETE">
				<Size x="52" y="24"/>

				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentNew" relativePoint="RIGHT">
						<Offset x="6" y="0"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						BOptionsStance_Delete()
					</OnClick>
				</Scripts>
			</Button>

			<Frame name="$parentStanceAdd" inherits="BongosOptionsStanceDialog"/>
		</Frames>

		<Scripts>
			<OnLoad>
				BOptionsStance_OnLoad()
			</OnLoad>
			<OnShow>
				BOptionsStance_OnShow()
			</OnShow>
			<OnMouseWheel>
				BOptionsStance_OnMousewheel(getglobal(this:GetName() .. "ScrollFrame"), arg1)
			</OnMouseWheel>
		</Scripts>
	</Frame>
</Ui>