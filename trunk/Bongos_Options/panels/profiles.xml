<Ui xmlns="http://www.blizzard.com/wow/ui/">

	<Script file="profiles.lua"/>

	<Button name="BongosOptionsProfileButton" virtual="true">
		<Scripts>
			<OnClick>
				BOptionsProfileButton_OnClick(self)
			</OnClick>
			<OnMouseWheel>
				BOptionsProfilesButton_OnMousewheel(BongosOptionsPanelProfilesScrollFrame, arg1)
			</OnMouseWheel>
		</Scripts>

		<ButtonText setAllPoints="true"/>
		<NormalFont font="GameFontNormal" justifyH="LEFT"/>
		<HighlightTexture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD"/>
	</Button>

	<!-- Profiles Panel -->
	<Frame name="BongosOptionsProfiles" inherits="BongosOptionsPanel" virtual="true">
		<Frames>
			<ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
						<Offset x="-4" y="-2"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
						<Offset x="-26" y="42"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnVerticalScroll>
						FauxScrollFrame_OnVerticalScroll(10, BOptionsProfilesScrollBar_Update)
					</OnVerticalScroll>
				</Scripts>
			</ScrollFrame>

			<Button name="$parentLoad" inherits="GooeyButton" text="BONGOS_OPTIONS_LOAD">
				<Size x="42" y="24"/>

				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="4" y="4"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						BOptionsProfiles_LoadProfile()
					</OnClick>
				</Scripts>
			</Button>

			<Button name="$parentDelete" inherits="GooeyButton" text="BONGOS_OPTIONS_DELETE">
				<Size x="52" y="24"/>

				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentLoad" relativePoint="RIGHT">
						<Offset x="2" y="0"/>
					</Anchor>
				</Anchors>

				<Scripts>
					<OnClick>
						BOptionsProfiles_DeleteProfile()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				BOptionsProfiles_OnLoad(self)
			</OnLoad>
			<OnShow>
				BOptionsProfiles_OnShow(self)
			</OnShow>
		</Scripts>
	</Frame>
</Ui>